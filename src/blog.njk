  image: /img/coinless-logo-blue.png
  sitemap:
    priority: 0.8
  layout: 'base.njk'
---

<main id="blogMain">
  <!-- Default Hero Section -->
  <section id="heroSection">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h2><span class="gradient-text-01">Blogs</span></h2>
          <p><a href="/index.html">Home</a> <i id="right" aria-hidden="true" class="fa fa-angle-right"></i> <strong>Blog - Coinless</strong></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Articles -->
  <section id="headlinePost">
    <div class="container">
      <h3>The Latest at Coinless</h3>

      <div class="row article-row">
        {%- for post in collections.blog | reverse -%} {% if loop.index0 < 1 %}
        {% include 'latest-article.njk' %} {% endif %} {%- endfor -%}
      </div>
    </div>
  </section>

  <section id="featuredArticles">
    <div class="container">
      <h2>Featured Stories</h2>
      <div class="row article-row article-no-container">
        {# {%- for post in collections.featured | reverse -%} {%if loop.index0 <
        3 %} {%include 'article-snippet.njk'%} {%endif%} {%- endfor -%} #} {%
        set count = 0 %} {%- for post in collections.featured | reverse -%} {%
        if post.data.tags.includes("blog") and count < 3 %} {% include
        'article-snippet.njk' %} {% set count = count + 1 %} {% endif %} {%-
        endfor -%}
      </div>
    </div>
  </section>

  <section id="allArticles">
    <div class="container on-scroll-animation slide-up">
      <h2>Read More</h2>
      <div class="row article-row article-no-container">
        {%- for post in collections.blog | reverse -%} {% include
        'article-snippet.njk' %} {%- endfor -%}
      </div>
      <div class="showMore-btn"><button id="showMoreBtn" class="btn">Show More +</button></div>
      {# Search Form #} {#
      <form id="searchForm" action="/blog/search" method="GET">
        <input type="text" name="q" placeholder="Search..." />
        <button type="submit">Search</button>
      </form>
      #}

      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@algolia/algoliasearch-netlify-frontend@1/dist/algoliasearchNetlify.css" />
      <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@algolia/algoliasearch-netlify-frontend@1/dist/algoliasearchNetlify.js"></script>
      <script type="text/javascript">
        algoliasearchNetlify({
          appId: 'CJDA6XE5LC',
          apiKey: 'a17399a52f0e326fe5bf0c42a9be6f12',
          siteId: '9d34062b-9c68-46fe-a9da-60a2d715faaf',
          branch: 'main',
          selector: 'div#search',
        });
      </script>
    </div>
  </section>
</main>